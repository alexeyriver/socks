

<p class="text-order">{{user.name}} , Ваш Заказ:</p>

{{#each user.box }}
<div class="{{_id}} ">
  <div class='flex'>
    <p class="{{item.color}}"> {{item.color}} </p> 
    <p>
     <img height="200px" width="200px" src="{{item.pic.url}}" alt="{{item.pic.name}}">
      </p>
  <p>
      <img height="200px" width="200px" src="{{item.pattern.url}}" alt="{{item.pattern.name}}">
   </p>
</div>
   <p class = 'amount'>
 <h3 class="count"> Количество: {{amount}} </h3>


{{/each}}

<p class="text-order">Ваш E-mail : {{user.email}}</p>

<form class = "ordermodal" action="/box/order" method="POST">
  <p class="text-order"> Мобильный телефон для подтверждения заказа: 
  <input type="phone"  name="phone" placeholder="Phone">
  </p>
 <p class="text-order"> Комментарий к заказу: 
  <input type="text"  name="comment" placeholder="Your comment...">
  </p>
  <div class="flex">

<button class= 'order btns' type="submit">Заказать</button>
  </div>
</form>
